{
  "name": "miniprogram-vscode-extension",
  "displayName": "微信小程序开发工具",
  "description": "提供模拟器、预览、打包上传、代码补全、语法高亮、项目模版等功能",
  "version": "1.3.3",
  "icon": "assets/logo.png",
  "publisher": "crazyurus",
  "license": "GPL-3.0",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Snippets",
    "Programming Languages",
    "Themes",
    "Formatters",
    "Debuggers",
    "Extension Packs",
    "Other"
  ],
  "keywords": [
    "小程序",
    "微信",
    "wechat",
    "weixin",
    "weapp",
    "mina",
    "miniprogram",
    "wxml"
  ],
  "author": {
    "email": "crazyurus@vip.qq.com",
    "name": "Crazy Urus",
    "url": "https://github.com/crazyurus"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crazyurus/miniprogram-vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/crazyurus/miniprogram-vscode-extension/issues",
    "email": "crazyurus@vip.qq.com"
  },
  "contributes": {
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/js.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/ts.json"
      },
      {
        "language": "xml",
        "path": "./snippets/wxml.json"
      },
      {
        "language": "json",
        "path": "./snippets/json.json"
      }
    ],
    "jsonValidation": [
      {
        "url": "./validations/app.json",
        "fileMatch": "*/app.json"
      },
      {
        "url": "./validations/page.json",
        "fileMatch": "*/pages/*.json"
      },
      {
        "url": "./validations/project.json",
        "fileMatch": "*/project.json"
      }
    ],
    "languages": [
      {
        "id": "xml",
        "aliases": [
          "XML"
        ],
        "extensions": [
          ".wxml",
          ".ttml"
        ]
      },
      {
        "id": "javascript",
        "aliases": [
          "JavaScript",
          "javascript",
          "js"
        ],
        "extensions": [
          ".wxs"
        ]
      },
      {
        "id": "css",
        "aliases": [
          "CSS"
        ],
        "extensions": [
          ".wxss",
          ".ttss"
        ]
      }
    ],
    "themes": [
      {
        "label": "WeChat Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/dark.json"
      },
      {
        "label": "WeChat Light",
        "uiTheme": "vs",
        "path": "./themes/light.json"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder == true",
          "command": "MiniProgram.commands.config.compileDir",
          "group": "compile"
        },
        {
          "when": "explorerResourceIsFolder == true",
          "command": "MiniProgram.commands.create.page",
          "group": "file"
        },
        {
          "when": "explorerResourceIsFolder == true",
          "command": "MiniProgram.commands.create.component",
          "group": "file"
        }
      ]
    },
    "commands": [
      {
        "command": "MiniProgram.commands.simulator",
        "title": "启动模拟器"
      },
      {
        "command": "MiniProgram.commands.config.compileDir",
        "title": "设置为编译上传目录"
      },
      {
        "command": "MiniProgram.commands.config.project",
        "title": "查看项目配置",
        "category": "MiniProgram"
      },
      {
        "command": "MiniProgram.commands.create.page",
        "title": "新建 Page"
      },
      {
        "command": "MiniProgram.commands.create.component",
        "title": "新建 Component"
      },
      {
        "command": "MiniProgram.commands.compile.npm",
        "title": "构建 NPM",
        "category": "MiniProgram"
      },
      {
        "command": "MiniProgram.commands.compile.preview",
        "title": "预览小程序",
        "category": "MiniProgram"
      },
      {
        "command": "MiniProgram.commands.compile.upload",
        "title": "打包并上传到微信后台",
        "category": "MiniProgram"
      },
      {
        "command": "MiniProgram.commands.document",
        "title": "查看开发文档",
        "category": "MiniProgram"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "miniprogram-view",
          "name": "微信小程序"
        }
      ]
    }
  },
  "activationEvents": [
    "*"
  ],
  "main": "./src/index.js",
  "dependencies": {
    "js-beautify": "^1.11.0",
    "miniprogram-ci": "^1.0.24",
    "weweb-cli": "^1.1.2"
  }
}
